{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "types": [
      "node"
    ]
  }
}